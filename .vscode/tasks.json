{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "Unix Makefiles",
                "-S", ".",
                "-B", "build",
                "-DBUILD_TESTS=ON",  
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "icon": { "id": "tools" },
        },
        {
            "label": "Compile Unit Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--verbose"
            ],
            "icon": { "id": "gear" },
        },
        
        {
            "label": "Run Array Buffer Unit Tests",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/test"
            },
            "command": "./test_queue",
            "icon": { "id": "run" },
        }
    ]
}